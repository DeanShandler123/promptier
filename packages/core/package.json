{
  "name": "@promptier/core",
  "version": "0.1.2",
  "description": "Core SDK for composing, rendering, and tracing LLM system prompts",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "tiktoken": "^1.0.15"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "llm",
    "prompt",
    "ai",
    "claude",
    "gpt",
    "openai",
    "anthropic",
    "system-prompt"
  ],
  "author": "Dean Shandler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeanShandler123/promptier.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/DeanShandler123/promptier#readme",
  "bugs": {
    "url": "https://github.com/DeanShandler123/promptier/issues"
  }
}
